<!DOCTYPE html>
<!-- <html lang="en" data-bs-theme="dark"> -->
<html lang="en" >

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300..700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Style+Script&display=swap" rel="stylesheet">

    
    
    <title>RailSync</title>
    <link href="/assets/img_and_gif/icon.png" rel="icon">

    <style>

    :root {
      scroll-behavior: smooth;
    }

    #content {
    opacity: 0; 
    transition: opacity 1s ease-in-out;   /*Add transition for opacity  */
  }

    *::selection{
      background:transparent;
    }

    /* Hide the default scrollbar */
    ::-webkit-scrollbar {
      width: 10px;
      height: 10px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
      background: #1d1d1d;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
      background: #3f3f3f;
      border-radius: 40px;
    }

    /* Handle on hover */
    ::-webkit-scrollbar-thumb:hover {
      background: rgb(137, 137, 137);
    }



   /* Custom styles for the select element */
    #classSelect {
    position: relative;
    appearance: none;
    padding-right: 20px;
    /* padding-left: 5px; */
    background-color: #000;
    background-image: url('/assets/img_and_gif/dropdown.svg');
    background-repeat: no-repeat;
    background-position: calc(100% - 5px) center;
    background-size: 20px 20px;
    color: #f6f6f6; /* Set text color to match background color */
    text-shadow: 0 0 0 #000;
    display: flex;
    align-items: center;
    border-radius: 10px;
    justify-content: center;
    width: 120px;
    }


   
        
        .main-heading{
            text-align: center;
            color:#00a6ff;
            margin: 30px 0 0 0;
        }


        body {
            background-color: #000;
            color: white;
            font-size: 0.9em;
            font-family: 'Comfortaa', sans-serif;
        }
        .container {
            max-width: 100%;
            overflow-x: auto;
        }
        h4 {
            color: #e06c00;
            margin-top: 50px;
        }
        table {
            border-collapse: collapse;
            width: 100%;
            margin-bottom: 20px;
            background-color: #000000;
            color: #ffffff;
        }
        th, td {
            border: 1px solid #444;
            padding: 8px;
            text-align: left;
            color:#fff;
            background-color: #000;
            text-shadow: none;
        }
        
        th {
        background-color: #111;
        color: #00a6ff;
        }


        .inputs{
        	background-color: #000;
        	outline: none;
        	border-radius: 8px;
            font-size: 12px;
            border: 2px solid #797979;
        }
        .inputs:focus {
            border: 2px solid #de6b00;
        	-webkit-box-shadow: none;
        	box-shadow: none;
          }
      
      
        .inputs:enabled{
        	background-color: #000;
        	color:white;
        	font-weight: 600;
        	letter-spacing: 1px;
        	outline: none;
        }

        .modal-content {
            background-color: rgb(34, 34, 34);
        }
        .modal-header, .modal-footer {
            border-color: #444;
        }

        

        .customBtn2{
          background-color: rgb(0, 163, 228);
          color: black;
          transition: all 0.3s ease-in;
          font-weight: 600;
          font-family: 'Trebuchet MS', sans-serif;
          border: 2px solid rgb(0, 0, 0);
          border-radius: 10px;
          padding: 0.2em 0.5em;
          letter-spacing: 3px;
        }
        .customBtn2:hover, .customBtn2:focus{
            background-color: #39baff;
            border: 2px solid black;
            color:rgb(0, 0, 0);
            text-decoration: none;
            outline: none;
            cursor:pointer;
        }


        .customBtn2:active{
          transition:all 100ms;
          background-color: rgb(81, 81, 81);
          color:#ffffff;
         }
     

    </style>
</head>
<body>

<div id="content">

    
    <h3 class="main-heading">Available Trains</h3>

    <div class="container mt-5">
        <table class="table" id="NonStopTrainsTable">
            <!-- <caption>Non-Stop Trains</caption> -->
            
            <h4 class="Heading">Trains without stops</h4>
            <thead>
                <tr>
                    <th>TrainID</th>
                    <th>UpDownStatus</th>
                    <th>DeptStation</th>
                    <th>ArrivalStation</th>
                    <th>DeptTime</th>
                    <th>ArrivalTime</th>
                    <th>TicketFares</th>
                    <th>Type</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% Trains.forEach((i) => { %>
                <tr>
                    <form action="SearchTrain/PrintTicketNonStop" method="POST" id="NonStopTrainForm">
                        <td><%= i.TrainId %></td>
                        <% if(i.UPStatus == 1) { %>
                        <td>Up</td>
                        <% } else { %>
                        <td>Down</td>
                        <% } %>  
                        <td><%= i.DeptStation %></td>
                        <td><%= i.ArrivalStation %></td>
                        <td><%= i.DeptTime %></td>
                        <td><%= i.ArrivalTime %></td>
                        <td>
                            <table>
                                <tr>
                                    <td>Economy:</td>
                                    <td><%= i.Economy %></td>
                                </tr>
                                <tr>
                                    <td>Business:</td>
                                    <td><%= i.Business %></td>
                                </tr>
                                <tr>
                                    <td>First Class:</td>
                                    <td><%= i.FirstClass %></td>
                                </tr>
                            </table>
                        </td>
                        <input type="hidden" name="TrackID" value="<%= i.TrackId %>">
                        <input type="hidden" name="selectedTrainID" value="<%= i.TrainId %>">
                        <td>
                            <select class="form-select inputs" name="selectedClass" id="classSelect">
                                <option>Economy</option>
                                <option>Business</option>
                                <option>First Class</option>
                            </select>
                        </td>

                        <td>
                            <input class="btn customBtn2" type="submit" value="book">
                        </td>
                    </form>
                </tr>
                <% }); %>
            </tbody>
        </table>


        <h4 class="Heading">Trains with Stops</h4>
        <table id="TableTrainWithStops" class="table">
            <thead>
                <tr>
                    <th>TrainID</th>
                    <th>UpDownStatus</th>
                    <th>DeptStation</th>
                    <th>ArrivalStation</th>
                    <th>DeptTime</th>
                    <th>ArrivalTime</th>
                    <th>TicketFares</th>
                    <th>Type</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% TrainsWithStops.forEach((i) => { %>
                <tr>
                    <form action="SearchTrain/PrintTicketNonStop" method="POST" id="<%= i.TrainId %>">
                        <td><%= i.TrainId %></td>
                        <!-- <td><%= i.TrackId %></td> -->
                        <% if(i.UPStatus == 1) { %>
                        <td>Up</td>
                        <% } else { %>
                        <td>Down</td>
                        <% } %>
                        <td><%= i.DeptStation %></td>
                        <td><%= i.ArrivalStation %></td>
                        <td><%= i.DeptTime %></td>
                        <td><%= i.ArrivalTime %></td>
                        <td>
                            <table>
                                <tr>
                                    <td>Economy:</td>
                                    <td><%= i.Economy %></td>
                                </tr>
                                <tr>
                                    <td>Business:</td>
                                    <td><%= i.Business %></td>
                                </tr>
                                <tr>
                                    <td>First Class:</td>
                                    <td><%= i.FirstClass %></td>
                                </tr>
                            </table>
                            <input type="hidden" name="TrackID" value="<%= i.TrackId %>">
                            <input type="hidden" name="selectedTrainID" value="<%= i.TrainId %>">
                            <td>
                                <select class="form-select inputs" name="selectedClass" id="classSelect">
                                    <option>Economy</option>
                                    <option>Business</option>
                                    <option>First Class</option>
                                </select>

                            </td>
                        </td>
                        <td>
                            <input class="btn customBtn2" type="submit" value="book">
                        </td>
                    </form>
                </tr>
                <% }); %>
            </tbody>
        </table>

    

    </div>
    <!-- Modal -->
    <div class="modal fade bd-example-modal-lg" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table table-dark table-bordered table-hover" id="NonStopTicketsTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>TrainID</th>
                                <th>Dept Station</th>
                                <th>Arrival Station</th>
                                <th>Class</th>
                                <th>CarriageId</th>
                                <th>Seat No</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>


        window.onload = function()
        {
        document.getElementById("content").style.opacity = '1'; // Fade in content
        };


        function bookTicket() {
            var NonStopForm = document.getElementById('NonStopTrainForm');
            const selectedClass = document.getElementById("NonStopsClass");
            NonStopForm.appendChild(selectedClass);
            NonStopForm.submit();
        }

        function fetchTableData() {
            var rowData = [];
            var table = document.getElementById('TableTrainWithStops');

            if (table) {
                for (var i = 1; i < table.rows.length; i++) {
                    var row = table.rows[i];
                    var rowDataItem = {};

                    for (var j = 0; j < row.cells.length; j++) {
                        var cell = row.cells[j];
                        var cellData = cell.innerText.trim();
                        var headerText = table.rows[0].cells[j].innerText.trim();
                        rowDataItem[headerText] = cellData;
                    }
                    rowData.push(rowDataItem);
                }
            }
            return rowData;
        }

