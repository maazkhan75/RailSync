<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<body>

<%- include('./partials/header.ejs') %>

<%- include('./partials/sidebar.ejs') %>
<style>
  /* CSS */
#inputName5 {
    /* Style the input field to make it visually distinct */
    color: #555; /* Example text color */
    background-color: #f9f9f9; /* Example background color */
    border: 1px solid #ddd; /* Example border */
    /* Add any other styles as needed */
}

</style>
<main id="main" class="main">

    <div class="pagetitle">
      <h1 style="color: rgb(219, 135, 56);">Form Layouts</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="DS">Home</a></li>
          <li class="breadcrumb-item">Forms</li>
          <li class="breadcrumb-item active">Layouts</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <section class="section">
      <div class="row">

          <div class="card" style="color: rgb(219, 135, 56);">
            <div class="card-body">
              <h5 class="card-title" style="color: rgb(219, 135, 56);" >Add Route</h5>

              <!-- Multi Columns Form -->
              <form class="row g-3">
                <div class="col-md-6">
                  <label for="TrainId" class="form-label">TrainID</label>
                  <select id="TrainId" class="form-select">
                    <% Train.forEach((train) => { %>
                      <option value="<%= train.TrainId %>"><%= train.TrainId %></option>
                    <% }); %>
                  </select>
                </div>
                <div class="col-md-6">
                  <label for="CarriageId" class="form-label">CarriageID</label>
                  <input type="input" class="form-control" id="CarriageId">
                </div>
                <div class="col-md-6">
                  <label for="Type" class="form-label">No of Seats</label>
                  <select id="Type" class="form-select">
                    <option value="E">Economy</option>
                    <option value="B">BusinessClass</option>
                    <option value="F">FirstClass</option>
                  </select>
                </div>
                <div class="col-md-6">
                  <label for="NoOfSeats" class="form-label">No of Seats</label>
                  <select id="NoOfSeats" class="form-select">
                    <option value="20">20</option>
                    <option value="30">30</option>
                    <option value="40">40</option>
                  </select>
                </div>
                <div class="text-center">
                  <button type="submit" id="submitButton" class="btn btn-primary">Submit</button>
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
              </form><!-- End Multi Columns Form -->
            </div>
          </div>
      </div>
    </section>
  </main><!-- End #main -->
  <%- include('./partials/footer.ejs') %>
  <%- include('./partials/script.ejs') %>
</body>
<script>
  document.getElementById('submitButton').addEventListener('click', function() {
    event.preventDefault();
    const TrainId = document.getElementById('TrainId').value;
    const CarriageId = document.getElementById('CarriageId').value;
    const NoOfSeats = document.getElementById('NoOfSeats').value;
    const Type = document.getElementById('Type').value;

    fetch('/TD/addCarriage', {
      method: 'POST',
      body: JSON.stringify({ TrainId, CarriageId,Type, NoOfSeats }),
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(response => response.json())
    .then(data => {
      const result = data.Message;
      if(result[0].ResultMessage=='CARRIAGE ADDED SUCCESSFULLY') {
        window.location.href = '/trainData';
      } else {
        console.log(result[0].ResultMessage);
        alert(result[0].ResultMessage);
      }
    })
    .catch(error => {
      console.error('Error:', error);
    });
  });
</script>

</html>
