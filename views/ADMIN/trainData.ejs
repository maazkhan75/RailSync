<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }
    .container {
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    table {
        width: 100%;
        border-collapse: collapse;
    }
    th, td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }
    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }
    tr:hover {
        background-color: #f9f9f9;
    }
    .edit-btn, .delete-btn {
        padding: 5px 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 3px;
    }
    .delete-btn {
        background-color: #f44336;
    }
    .edit-btn:hover, .delete-btn:hover {
        background-color: #45a049;
    }

    .table-header {
        margin-bottom: 10px;
        display: flex;
        align-items: center;
    }

    #searchInput {
        flex: 1;
        margin-right: 10px;
        padding: 5px;
        border-radius: 3px;
        border: 1px solid #ccc;
    }

    #searchBtn {
        padding: 5px 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        cursor: pointer;
        border-radius: 3px;
    }

    #searchBtn:hover {
        background-color: #0056b3;
    }

</style>
<body>

<%- include('./partials/header.ejs') %>

<%- include('./partials/sidebar.ejs') %>

    <main id="main" class="main">

        <div class="pagetitle">
        <h1>Train Meta Data</h1>
        <nav>
            <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="DS">Home</a></li>
            <li class="breadcrumb-item">Tables</li>
            <li class="breadcrumb-item active">General</li>
            </ol>
        </nav>
        </div><!-- End Page Title -->

        <section class="section">


                <div class="container">
                <h2>Train Data</h2>
                <table>
                    <thead>
                        <tr>
                            <th>TrainID</th>
                            <th>UpDownStatus</th>
                            <th>DeptStation</th>
                            <th>ArrivalStation</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% Trains.forEach((i)=>{ %>
                            <tr data-train-id="<%= i.TrainId %>">
                                <td><%= i.TrainId %></td>
                                <%if(i.UPStatus==1){ %>
                                <td>Up</td>
                                <% }else {%>
                                <td>Down</td>
                                <% }%>
                                <td><%= i.DeptStation %></td>
                                <td><%= i.ArrivalStation %></td>
                                <td>
                                    <button class="edit-btn" onclick="editTrain('<%= i.TrainId %>')">Edit</button>
                                    <button class="delete-btn" onclick="deleteTrain('<%= i.TrainId %>')">Delete</button>
                                </td>
                            </tr>
                            <% }); %>


                        <!-- More rows here -->
                    </tbody>
                </table>
            </div>



            <div class="container">
                <h2>Carriage Data</h2>
                <div class="table-header">
                    <input type="text" id="searchCarriage" placeholder="Search By TrainID...">
                    <button id="searchCarriageButton" class="search-btn">Search</button>
                </div>
                <table id="seatTable">
                    <thead>
                        <tr>
                            <th>CarriageID</th>
                            <th>TrainID</th>
                            <th>Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr></tr>


                        <!-- More rows here -->
                    </tbody>
                </table>
            </div>

            <div class="container">
                <h2>Seats</h2>
                <div class="table-header">
                    <input type="text" id="searchSeat" placeholder="Search By CarriageID...">
                    <button id="searchSeatButton" class="search-btn">Search</button>
                </div>
                <table id="Seats">
                    <thead>
                        <tr>
                            <th>CarriageID</th>
                            <th>TrainID</th>
                            <th>SeatNo</th>
                            <th>BookingStatus</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr></tr>


                        <!-- More rows here -->
                    </tbody>
                </table>
            </div>

        </section>
    </main>
  <%- include('./partials/footer.ejs') %>
  <%- include('./partials/script.ejs') %>

</body>
<script>

function updateTable(data) {
    const table = document.getElementById('seatTable');
    table.innerHTML = `
        <tr>
            <th>CarriageID</th>
            <th>TrainID</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    `;
    // Loop through the received data and append rows to the table
    if (Array.isArray(data.Carriage)) {
        data.Carriage.forEach(entry => {
            const row = document.createElement('tr');
            row.setAttribute('data-carriage-id', entry.CarriageId);
            row.innerHTML = `
                <td>${entry.CarriageId}</td>
                <td>${entry.TrainId}</td>
                <td>${entry.Type}</td>
                <td>
                <button class="edit-btn" onclick="editCarriage('${entry.CarriageId}')">Edit</button>
                <button class="delete-btn" onclick="deleteCarriage('${entry.CarriageId}')">Delete</button>
                </td>
            `;
            table.appendChild(row);
        });
    } else {
        console.error('Unexpected data format:', data);
    }
}


document.getElementById('searchCarriageButton').addEventListener('click', function() {
    // Retrieve the value entered in the search input field
    const searchTerm = document.getElementById('searchCarriage').value;
    if(searchTerm ==null)
        return;
    console.log(searchTerm);
    // You can also send the search term to your server for further processing if needed
    fetch('/TD/searchCarriage', {
      method: 'POST',
      body: JSON.stringify({ searchTerm: searchTerm }),
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
       updateTable(data);

    })
    .catch(error => {
        console.log('gg');
      console.error('Error:', error);
    });
  });


  function updateSeatTable(data)
  {
    const table = document.getElementById('Seats');
    table.innerHTML = `
        <tr>
            <th>CarriageID</th>
            <th>TrainID</th>
            <th>SeatNo</th>
            <th>BookingStatus</th>
            <th>Actions</th>
        </tr>
    `;
    // Loop through the received data and append rows to the table
    if (Array.isArray(data.Seat)) {
        data.Seat.forEach(entry => {
            const row = document.createElement('tr');
            row.setAttribute('data-carriage-id', entry.CarriageID);
            row.setAttribute('data-train-id', entry.TrainID);
            row.setAttribute('data-seat-no', entry.SeatNo);
            row.innerHTML = `
                <td>${entry.CarriageID}</td>
                <td>${entry.TrainID}</td>
                <td>${entry.SeatNo}</td>
                <td>${entry.BookingStatus}</td>
                <td>
                <button class="edit-btn" onclick="editSeat('${entry.CarriageID}', '${entry.TrainID}', '${entry.SeatNo}')">Edit</button>
                <button class="delete-btn" onclick="deleteSeat('${entry.CarriageID}', '${entry.TrainID}', '${entry.SeatNo}')">Delete</button>
            </td>
                </td>
            `;
            table.appendChild(row);
        });
    } else {
        console.error('Unexpected data format:', data);
    }
  }

  document.getElementById('searchSeatButton').addEventListener('click', function() {
    // Retrieve the value entered in the search input field
    const searchTerm = document.getElementById('searchSeat').value;
    if(searchTerm ==null)
        return;
    console.log(searchTerm);
    // You can also send the search term to your server for further processing if needed
    fetch('/TD/SearchSeat', {
      method: 'POST',
      body: JSON.stringify({ searchTerm: searchTerm }),
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
       updateSeatTable(data);

    })
    .catch(error => {
        console.log('gg');
      console.error('Error:', error);
    });
  });


  function editSeat(carriageID, trainID, seatNo) {
    window.location.href = `/editSeat?carriageID=${carriageID}&trainID=${trainID}&seatNo=${seatNo}`;
}

function deleteSeat(carriageID, trainID, seatNo) {
    // Confirm deletion
    if (confirm('Are you sure you want to delete this seat?')) {
        // Send a request to delete the seat
        fetch(`/TD/deleteSeat?carriageID=${carriageID}&trainID=${trainID}&seatNo=${seatNo}`, {
            method: 'DELETE'
        })
        .then(response => {
            if (response.ok) {
                // Seat deleted successfully, remove the corresponding row from the table
                const rowToDelete = document.querySelector(`tr[data-carriage-id="${carriageID}"][data-train-id="${trainID}"][data-seat-no="${seatNo}"]`);
                if (rowToDelete) {
                    rowToDelete.remove();
                } else {
                    console.error('Failed to find row to delete');
                }
            } else {
               
                console.error('Failed to delete seat');
                alert('Failed to delete seat. Please try again later.');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred. Please try again later.');
        });
    }
}


function editTrain(TrainId) {
    window.location.href = `/editTrain?TrainID=${TrainId}`;
}

function deleteTrain(TrainId) {
    // Confirm deletion

    if (confirm('Are you sure you want to delete this seat?')) {
        // Find the row containing the delete button
        const row = document.querySelector(`tr[data-train-id="${TrainId}"]`);
 
        if (row) {


            // Send a request to delete the seat
            fetch(`/TD/deleteTrain?TrainID=${TrainId}`, {
                method: 'DELETE'
            })
            .then(response => {
                if (response.ok) {
                    // Seat deleted successfully, remove the corresponding row from the table
                    row.remove();
                } else {
                    console.error('Failed to delete seat');
                    alert('Failed to delete seat. Please try again later.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred. Please try again later.');
            });
        } else {
            console.error('Failed to find row containing delete button');
            alert('Failed to find row containing delete button. Please refresh the page and try again.');
        }
    }
}


function editCarriage(CarriageID) {
    window.location.href = `/editTrain?carriageID=${carriageID}`;
}

function deleteCarriage(CarriageID) {
    // Confirm deletion
    if (confirm('Are you sure you want to delete this seat?')) {
        // Find the row containing the delete button
        const row = document.querySelector(`tr[data-carriage-id="${CarriageID}"]`);
        if (row) {


            // Send a request to delete the seat
            fetch(`/TD/deleteCarriage?carriageID=${CarriageID}`, {
                method: 'DELETE'
            })
            .then(response => {
                if (response.ok) {
                    // Seat deleted successfully, remove the corresponding row from the table
                    row.remove();
                } else {
                    console.error('Failed to delete seat');
                    alert('Failed to delete seat. Please try again later.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred. Please try again later.');
            });
        } else {
            console.error('Failed to find row containing delete button');
            alert('Failed to find row containing delete button. Please refresh the page and try again.');
        }
    }
}


</script>
</html>