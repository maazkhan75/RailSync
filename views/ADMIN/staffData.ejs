<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }
    .container {
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    table {
        width: 100%;
        border-collapse: collapse;
    }
    th, td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }
    th {
        background-color: #f2f2f2;
        font-weight: bold;
    }
    tr:hover {
        background-color: #f9f9f9;
    }
    .edit-btn, .delete-btn {
        padding: 5px 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        cursor: pointer;
        border-radius: 3px;
    }
    .delete-btn {
        background-color: #f44336;
    }
    .edit-btn:hover, .delete-btn:hover {
        background-color: #45a049;
    }

    .table-header {
        margin-bottom: 10px;
        display: flex;
        align-items: center;
    }

    #searchInput {
        flex: 1;
        margin-right: 10px;
        padding: 5px;
        border-radius: 3px;
        border: 1px solid #ccc;
    }

    #searchBtn {
        padding: 5px 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        cursor: pointer;
        border-radius: 3px;
    }

    #searchBtn:hover {
        background-color: #0056b3;
    }

</style>
<body>

<%- include('./partials/header.ejs') %>

<%- include('./partials/sidebar.ejs') %>

    <main id="main" class="main">

        <div class="pagetitle">
        <h1>Staff Members Data</h1>
        <nav>
            <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="DS">Home</a></li>
            <li class="breadcrumb-item">Tables</li>
            <li class="breadcrumb-item active">General</li>
            </ol>
        </nav>
        </div><!-- End Page Title -->

        <section class="section">


                <div class="container">
                <h2>Crew Data</h2>
                <table>
                    <thead>
                        <tr>
                            <th>CrewId</th>
                            <th>CrewName</th>
                            <th>Address</th>
                            <th>DateOfBirth</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% Crew.forEach((i)=>{ %>
                            <tr>
                                <td><%= i.CrewId %></td>
                                <td><%= i.CrewName %></td>
                                <td><%= i.Address %></td>
                                <td><%= i.DateOfBirth %></td>
                               
                            </tr>
                            <% }); %>


                        <!-- More rows here -->
                    </tbody>
                </table>
            </div>

            <div class="container">
                <h2>Pilot Data</h2>
                <table>
                    <thead>
                        <tr>
                            <th>CrewId</th>
                            <th>TrainId</th>
                           <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% Pilot.forEach((i)=>{ %>
                            <tr>
                                <td><%= i.CrewId %></td>
                                <td><%= i.TrainId %></td>
                              
                            </tr>
                            <% }); %>


                        <!-- More rows here -->
                    </tbody>
                </table>
            </div>


        
            <div class="container">
                <h2>Security Data</h2>
                <table>
                    <thead>
                        <tr>
                            <th>CrewId</th>
                            <th>StationId</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% Security.forEach((i)=>{ %>
                            <tr>
                                <td><%= i.CrewId %></td>
                                <td><%= i.StationId %></td>
                               
                               
                            </tr>
                            <% }); %>


                        <!-- More rows here -->
                    </tbody>
                </table>
            </div>


          
        </section>
    </main>
  <%- include('./partials/footer.ejs') %>
  <%- include('./partials/script.ejs') %>

</body>
<script>

