<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

<body>

<%- include('./partials/header.ejs') %>
<%- include('./partials/sidebar.ejs') %>

<main id="main" class="main">

    <div class="pagetitle">
      <h1 style="color: rgb(219, 135, 56);">Add Staff</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="adminDash">Home</a></li>
          <li class="breadcrumb-item">add Data</li>
          <li class="breadcrumb-item active">Staff</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <section class="section">
      <div class="row">


        <div class="card" ">
          <div class="card-body">
            <h5 class="card-title" >Pilot  Details :</h5>

            <!-- Multi Columns Form -->
            <form class="row g-3">
              <div class="col-md-4">
                  <label for="CrewId" class="form-label" style="color: #de6b00;">CNIC</label>
                  <input type="text" class="form-control inputs" id="CrewId" >
                </div>
                <div class="col-md-4">
                  <label for="Name" class="form-label" style="color: #de6b00;">Name</label>
                  <input type="text" class="form-control inputs" id="Name" >
                </div>
                <div class="col-md-4">
                  <label for="Address" class="form-label" style="color: #de6b00;">Address</label>
                  <input type="text" class="form-control inputs" id="Address" >
                </div>
                <div class="col-md-4">
                  <label for="DateOfBirth" class="form-label" style="color: #de6b00;">DateOfBirth</label>
                  <input type="date" class="form-control inputs" id="DateOfBirth">
                </div>


              <div class="col-md-4">
                <label for="inputStartStation" class="form-label" style="color: #de6b00;">TrainID</label>
                <select id="inputStartStation" class="form-select inputs">
                  <% Train.forEach((Train) => { %>
                    <option value="<%= Train.TrainId %>"><%= Train.TrainId %></option>
                <% }); %>
                </select>
              </div>
              <div class="text-center">
                  <button type="submit" id="submitButton" class="btn btn-primary">Submit</button>
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>

            </form><!-- End Multi Columns Form -->

          </div>
        </div>



          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Security Guard Details :</h5>

              <!-- Multi Columns Form -->
              <form class="row g-3">
                <div class="col-md-4">
                    <label for="CrewId" class="form-label" style="color: #de6b00;">CNIC</label>
                    <input type="text" class="form-control inputs" id="CrewId" >
                  </div>
                  <div class="col-md-4">
                    <label for="Name" class="form-label" style="color: #de6b00;">Name</label>
                    <input type="text" class="form-control inputs" id="Name" >
                  </div>
                  <div class="col-md-4">
                    <label for="Address" class="form-label" style="color: #de6b00;">Address</label>
                    <input type="text" class="form-control inputs" id="Address" >
                  </div>
                  <div class="col-md-4">
                    <label for="DateOfBirth" class="form-label" style="color: #de6b00;">DateOfBirth</label>
                    <input type="date" class="form-control inputs" id="DateOfBirth">
                  </div>


                <div class="col-md-4">
                  <label for="inputStartStation" class="form-label" style="color: #de6b00;">Station Name</label>
                  <select id="inputStartStation" class="form-select inputs">
                    <% Station.forEach((station) => { %>
                      <option value="<%= station.StationId %>"><%= station.StationName %></option>
                  <% }); %>
                  </select>
                </div>
                <div class="text-center">
                    <button type="submit" id="submitButton" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                </div>



              </form><!-- End Multi Columns Form -->
          </div>
        </div>


      </div>
    </section>

  </main><!-- End #main -->


  <%- include('./partials/footer.ejs') %>
  <%- include('./partials/script.ejs') %>

</body>
<script>
  document.getElementById('submitButton').addEventListener('click', function() {
      event.preventDefault();
      const CrewId = document.getElementById('CrewId').value;
      const CrewName = document.getElementById('Name').value;
      const Address = document.getElementById('Address').value;
      const DateOfBirth = document.getElementById('DateOfBirth').value;
      const StationId = document.getElementById('inputStartStation').value;
        
      fetch('/TD/addSecurity', {
      method: 'POST',
      body: JSON.stringify({ CrewId,CrewName,Address,DateOfBirth,StationId }),
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.json())
    .then(data => {
      const result = data.Message;
       if(result[0].ResultMessage=='GUARD ADDED SUCCESSFULLY')
          {window.location.href = '/staffdata';}
        else
        {
          console.log(result[0].ResultMessage);
          alert(result[0].ResultMessage);
        }

    })
    .catch(error => {
       
      console.error('Error:', error);
    });
      // You can perform further actions here, such as sending the data to the server via fetch() or XMLHttpRequest
  });
</script>

</html>