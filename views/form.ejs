<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>Form</title>
</head>
<body style="overflow: hidden; background-color: black;">    <!--later we will customize this page further -->
     <div class="container mt-5" class="bg-success">
        <h2 class="mb-4">Plan Your Trip</h2>
        <form id="StationInput" action="SearchTrain" method="post" >
          <div class="row mb-3">
            <label for="From-City" class="col-sm-2 col-form-label">From: </label>
            <div class="col-sm-10">
              <select class="form-select" id="From-City-Dropdown" name="fromCity" aria-label="From-City-Dropdown">
                <% StationNames.forEach((name)=>{ %>
                    <option> <%= name.StationName %> </option>
                <% }); %>

              </select>
            </div>
          </div>
          <div class="row mb-3">
            <label for="To-city-Dropdown" class="col-sm-2 col-form-label">To: </label>
            <div class="col-sm-10">
              <select class="form-select" id="To-city-Dropdown" name="toCity" aria-label="To-City-DropDown">
                
                <% StationNames.forEach((name)=>{ %>
                    <option> <%= name.StationName %> </option>
                <% }); %>

              </select>
            </div>
          </div>
          <div class="row mb-3">
            <label for="tripDate" class="col-sm-2 col-form-label" >  Date:</label>
            <div class="col sm-12">
              <input id="tripDate" type="datetime-local" name="journeyDate">
            </div>
          </div>
          <div class="row mb-3">
            <div class="col-sm-12 offset-sm-2">
              <button type="submit" class="btn btn-primary"  style="background: rgb(0, 166, 232); color: black;">Search Trains</button>
            </div>
          </div>
        </form>
      </div>
      
      <div id="TrainName" ></div>
      <% if(isSubmitted){ %>
          <h1>hello</h1>
      <% }%>

</body>
<script>
    function submitForm() {
          alert("lol");
            const formData = new FormData(document.getElementById('StationInput'));
            fetch('/SearchTrain', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                
                document.getElementById('TrainName').innerHTML = data[0].TrainId;
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }
  </script>
</html>
