<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@300&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/assets/css/signup&login_styles.css">
    <title>SignUp Form</title>
</head>
<body>
	<!-- if the user signup successfully -->
    <% if (typeof successMessage !== 'undefined') { %>
    <div class="alert alert-success" role="alert">
        <%= successMessage %>
    </div>
    <% } %>

	<!-- if the user already exits -->
	<% if (typeof errorMessage !== 'undefined') { %>
	<div class="alert alert-danger" role="alert">
		<%= errorMessage %>
	</div>
	<% } %>

    <div class="topHeading">
    <h2 class="display-4 heading">Sign Up</h2>
    </div>

    <div class="container_topLvl">
        <div class="main">
            <div class="container-fluid mt-1">
                <form action="/signup" method="POST" onsubmit="return validatePassword()">

                    <div class="row">
                        <div class="mb-3 col-md-4 col-7 ml-md-4 ml-3  pl-md-4">
                            <label for="CNIC" class="form-label sub_heading">CNIC:</label>
                            <input type="text" class="form-control inputs" id="CNIC" name="cnic" placeholder="13 digits" pattern="[0-9]{13}" required>
                        </div>

                        <div class="mb-3 col-md-4 col-7 ml-md-4 ml-3  pl-md-4">
                            <label for="username" class="form-label sub_heading">User Name:</label>
                            <input type="text" class="form-control inputs" id="username" name="username" required>
                        </div>
                    </div>


                    <div class="row">
                        <div class="mb-3 col-md-4 col-7 ml-md-4 ml-3  pl-md-4">
                            <label for="Password" class="form-label sub_heading">Password:</label>
                            <input type="password" class="form-control inputs" id="Password" name="password" placeholder="characters + digit" required>
                        </div>

                        
                        <div class="mb-3 col-md-4 col-7 ml-md-4 ml-3  pl-md-4">
                            <label for="confirmPassword" class="form-label sub_heading">Confirm Password:</label>
                            <input type="password" class="form-control inputs" id="confirmPassword" name="confirmpassword" placeholder="characters + digit" required>
                        </div> 

                        <div class="mb-3 col-md-4 col-7 ml-md-4 ml-3  pl-md-4">
                            <label for="PhoneNo" class="form-label sub_heading">Phone No:</label>
                            <input type="tel" class="form-control inputs" id="PhoneNo" name="phoneNo" placeholder="11 digits" pattern="[0-9]{11}">
                        </div>
                    </div>

                    <div class="mb-3 mt-2 form-check">
                        <input type="checkbox" class="form-check-input ml-4 " id="check1" required>
                        <label class="form-check-label pl-5" for="exampleCheck1">I am not a Robot!</label>
                    </div>

                    <div class="pl-4">
                        <button type="submit" class="btn-submit ml-2">Enter</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <script>
        function validatePassword() {
          var pass = document.getElementById("Password").value;
          var c_pass = document.getElementById("confirmPassword").value;

          // Check if passwords match
          if (pass !== c_pass) {
            alert("Passwords donot match! \nEnter same passwords");
            return false;
          }

          // Check if password contains at least one digit and one character
          var digitRegex = /\d/;
          var charRegex = /[a-zA-Z]/;
          if (!digitRegex.test(pass) || !charRegex.test(pass)) {
          alert("Password must contain at least one digit and one character.");
          return false;
        }
        
          return true;
        }
    </script>
        

</body>
</html>
